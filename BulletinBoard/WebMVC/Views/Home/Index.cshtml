@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@model IList<WebApi.Contracts.DTO.AdvertDto>

@{
    ViewData["Title"] = @Localizer["pageTitle"];
}

<h1 class="page-header" align="center">@Localizer["pageHeader"]</h1>
<div class="service-info">
    <div class="service-info-image-container">
        <img src="~/images/happy-people-2.jpg">
    </div>
    <div class="service-info-text-container">
        <p class="service-info-text-container-header">@Localizer["aboutCompanyHeader"]</p>
        <p class="service-info-text-container-text">
            <span style="font-weight: bold;">@Localizer["companyName"]</span> - @Localizer["aboutCompany"]
        </p>
    </div>
</div>
@if (Model != null)
{
    <h2 class="page-header">@Localizer["recentlyAddedAds"]</h2>
    <div class="adverts">
        @foreach (var item in Model)
        {
            <div class="advert">
                <div class="advert-photo">
                    <img src="/images/adverts-images/@item.PrimaryImageUrl" class="advert-photo-image">
                </div>
                <div class="advert-title">
                    <a href="/advert/@item.Id" class="advert-title-link">@item.Title</a>
                </div>
                <div class="advert-price">
                    <p class="advert-price-text">@item.Price.ToString("N2") ₽</p>
                </div>
                <div class="advert-date">
                    <p class="advert-date-text">@item.PublicationDate.ToLongDateString()</p>
                </div>
                <div class="advert-short-description">
                    <p class="advert-short-description-text">@item.ShortDescription</p>
                </div>
            </div>
        }
    </div>
}
